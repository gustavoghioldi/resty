{
    "name": "restyphp/resty",
    "type": "library",
    "description": "Create beautifull REST APIs",
    "keywords": ["rest", "api", "framework", "slim"],
    "homepage": "https://github.com/mostofreddy/resty",
    "license": "MIT",
    "version": "0.7.0",
    "authors": [
        {
            "name": "Federico Lozada Mosto",
            "email": "mosto.federico@gmail.com",
            "homepage": "http://www.mostofreddy.com.ar"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "slim/slim": "^3.0",
        "symfony/console": "v3.1.5",
        "symfony/process": "v3.1.5",
        "restyphp/slim-json-handler-error": "0.2.*",
        "restyphp/slim-service-provider": "0.2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*",
        "squizlabs/php_codesniffer": "2.7.*",
        "restyphp/slim-loggy": "0.1.*"
    },
    "autoload": {
        "psr-4": {
            "Resty\\": "src/",
            "Resty\\Test\\": "tests/"
        }
    },
    "bin": [
        "resty"
    ],
    "suggest": {
        "restyphp/slim-loggy": "Service provider para integracion con componente de logger Loggy (version: 0.1.*)",
        "restyphp/slim-doctrine": "Service provider para integracion con Doctrine y DBAL (version: 0.1.*)"
    }
}
